{
    "autoSave": true,
    "editor.guides": [
        72,
        80,
        120
    ],
    "editor.indentStyle": "Spaces",
    "editor.renderWhitespace": "All",
    "editor.showLineStatus": true,
    "editor.showTabs": true,
    "git.revert.confirm": true,
    "keymap": "pc-ij",
    "launchTerminalOnOpen": true,
    "showShortcuts": true,
    "terminal.fontFamily": "JetBrains Mono",
    "terminal.profiles": [
        {
            "name": "PowerShell 7",
            "program": "pwsh"
        }
    ],
    "theme": "sync-with-os",
    "trimTrailingSpacesOnSave": true
}
