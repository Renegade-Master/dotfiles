### User Configuration File ###

## General Aliases ##
alias plz="sudo "

alias ccat="highlight -O ansi --force"
alias diskspace="du -k * | sort -nr | cut -f2 | xargs -d '\n' du -sh | less"
alias ll="ls -lAughF"
alias tmuxd="tmux new-session \; split-window -h \; send-keys 'htop' C-m \; split-window -v \; send-keys 'update' C-m \;"
alias update="printf '\n--- Updating ---\n'; sudo apt update; printf '\n--- Upgrading Packages ---\n'; sudo apt full-upgrade -y; printf '\n--- Upgrading OS ---\n'; sudo apt dist-upgrade -y; printf '\n--- Cleaning Up ---\n'; sudo apt autoremove -y; printf '\n--- Updating Oh-My-ZSH ---\n'; omz update"

## Development ##
# The first two parts of this command appear to do the same thing, but with different results somehow
alias docker-remove-all='docker ps -a | grep Exit | cut -d ' ' -f 1 | xargs docker rm; docker rm "$(docker ps -aq)"; docker rmi "$(docker images -f "dangling=true" -q)"'
alias git-update="git submodule update --init --recursive; git fetch; git pull --ff-only; git submodule foreach git fetch; git submodule foreach git pull --ff-only"
alias whale-quote="docker run --rm --name whale-say renegademaster/docker-whale"
alias reset-network="sudo nmcli networking off; sudo nmcli networking on"
alias datetime="date +%Y%m%dT%H%M%SZ"

## Maintenance ##
alias pip-update="python3 ~/.scripts/python/pip-update-all.py"

